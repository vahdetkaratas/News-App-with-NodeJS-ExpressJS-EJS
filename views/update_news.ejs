
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i>Haber Listesi</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Haber Güncelleme</h2>
            <span class="text-light">Haber Güncelleme Ekranı</span>
        </div>

       

 <form method="POST" action="/api/news" id="update_news" enctype="multipart/form-data">

    <div class="new_news">

        <div class="form-group">
            <label for="img" class="text-light">Resim Seç : </label>
            <input type="file" id="img" name="img"  accept="image/*"/><br />
        </div>

        <div class="form-group">
            <label for="title" class="text-light">Haber Başlık : </label>
            <input type="hidden" name="id" value="<%= news._id %>">
            <input type="text" name="title" value= "<%= news.title %>" placeholder="Başlık Giriniz">
        </div>


        <div class="form-group">
            <label for="subtitle" class="text-light">Haber Altbaşlık : </label>
            <input type="text" name="subtitle" value="<%= news.subTitle %>" placeholder="Altbaşlık Giriniz">
        </div>

        <div class="form-group">
            <label for="textarea" class="text-light">Haber Metni : </label>
            <textarea id="textarea" name="textarea" rows="5" cols="50"><%= news.text %></textarea>

        </div>

        <div class="form-group">
            <label for="date" class="text-light">Haber Tarihi : </label>
            <input type="date" name="date" value="<%= news.date %>" placeholder="Tarih Giriniz">
        </div>


        <div class="form-group">
            <button type="submit" class="btn text-dark update">Kaydet</button>
        </div>

    </div>
    
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
